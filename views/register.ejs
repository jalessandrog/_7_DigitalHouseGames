<!DOCTYPE html>
<html>
<!-- Include Head -->
<%- include('partials/head') %>
<!-- Include Head -->

<!-- Header -->
<%- include('partials/header') %>
<!-- /Header -->
<body>
   <section class="section-register">
      <h1 class="title">Crear Cuenta</h1>
      <p class="banner-usuario">Registrate en DigitalHouseGames</p>
      <div class="form-container register">
          <form action="###" method="POST">
                <p>
                    <label class="label-1">
                        Nombre(s)
                        <input type="text" name="username" placeholder="Nombre(s)">
                    </label>
                </p>
                <p>
                    <label class="label-1">
                        Apellidos
                        <input type="text" name="lastname" placeholder="Apellido paterno y materno">
                    </label>
                </p>
                <p>
                    <label class="label-1">
                        Email
                        <input type="email" name="email" placeholder="Correo electronico" >
                    </label>
                </p>
                <p>
                    <label class="label-1">
                        Contrase単a
                        <input type="password" name="password" placeholder="Contrase単a">
                    </label>
                </p>
                <p>
                    <label class="label-1">
                        Confirmar Contrase単a
                        <input type="password" name="confirm-password" placeholder="Confirmar contrase単a">
                    </label>
                </p>
                <p>
                    <label class="label-date">
                        Fecha de nacimiento
                        <input type="date" name="remember">
                    </label>
                </p>
                <p>
                    <label class="label-2">
                        Perfil de usuario: 
                        <label class="select" for="comprador">Vendedor</label>
                        <input type="radio" id="vendedor" name="profile" value="vendedor" checked>
                        <label class="select" for="comprador">Comprador</label>
                        <input type="radio" id="comprador" name="profile" value="comprador">
                    </label>
                </p>
                <p>
                    <label class="label-file">
                        Imagen de perfil:
                        <input type="file" name="avatar" accept="image/png, image/jpeg">
                    </label>
                </p>
              <p class="buttons">
                 <button type="submit" class="action-button">Crear Cuenta</button>
              </p>
          </form>
      </div>
  </section>
</body>

<!------------------------Footer---------------------------------> 
<%- include('partials/footer') %>
<!-- /footer --> 
</html>