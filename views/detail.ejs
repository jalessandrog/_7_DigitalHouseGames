   imgpequena[0].onclick=function(){
       imgproducto.src=imgpequena[0].src;
   }
   imgpequena[1].onclick=function(){
       imgproducto.src=imgpequena[1].src;
   }
   imgpequena[2].onclick=function(){
       imgproducto.src=imgpequena[2].src;
   }
   imgpequena[3].onclick=function(){
       imgproducto.src=imgpequena[3].src;
   }
</script>

