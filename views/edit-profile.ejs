<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head') %>
<!-- Header -->
<%- include('partials/header') %>
<body>
    <section class="section-profile">
        <h1 class="title">Perfil de <%= usersList3.nombre %></h1>
        <div class="imagen-perfil">
            <img src="/images/users/<%= usersList3.avatar %>" width="10%">
            
            <hr class="mini-divisor perfil">
        </div>
        <div class="form-container profile">
            <form class="EditUserForm" id="EditUserForm" method="POST" action="/edit/<%=usersList3.idUsuario%>?_method=PUT" enctype="multipart/form-data">
                    
                    <p>
                        <label class="label-1">
                            Nombre(s)
                            <input type="text" name="nombre" id="nombre" placeholder="Nombre(s)" value="<%= usersList3.nombre %>" >
                        </label>
                    </p>
                    <% if (locals.errors && errors.nombre) { %>
                        <p class="msg-errores"><%= errors.nombre.msg %></p>
                    <% } %>

                    
                    <p>
                        <label class="label-1">
                            Apellidos
                            <input type="text" name="apellidos"  id="apellidos" placeholder="Apellido paterno y materno" value="<%= usersList3.apellidos %>" >
                        </label>
                    </p>
                    <% if (locals.errors && errors.apellidos) { %>
                        <p class="msg-errores"><%= errors.apellidos.msg %></p>
                    <% } %>
                    
                    <p>
                        <label class="label-1">
                            Email
                            <input type="email" name="email" id="email" placeholder="Correo electronico" value="<%= usersList3.email %>" >
                        </label>
                    </p>
                    <% if (locals.errors && errors.email) { %>
                        <p class="msg-errores"><%= errors.email.msg %></p>
                    <% } %>
                    
                    
                    <p>
                        <label class="label-1">
                            Contrase単a
                            <input type="password" name="password" id="password" placeholder="Contrase単a" >
                        </label>
                    </p>
                    <% if (locals.errors && errors.password) { %>
                        <p class="msg-errores"><%= errors.password.msg %></p>
                    <% } %>
                    
                    <!-- <p>
                        <label class="label-1">
                            Confirmar Contrase単a
                            <input type='password' name='confirmPassword' placeholder="Confirmar contrase単a"  >
                        </label>
                    </p>
                    <% if (locals.errors && errors.confirmPassword) { %>
                        <p class="msg-errores"><%= errors.confirmPassword.msg %></p>
                    <% } %> -->
                    
                    <p>
                        <label class="label-date">
                            Fecha de nacimiento
                            <input type="date" name="cumpleanios" id="cumpleanios" value="<%= usersList3.cumpleanios %>" >
                        </label>
                    </p>
                    <% if (locals.errors && errors.cumpleanios) { %>
                        <p class="msg-errores"><%= errors.cumpleanios.msg %></p>
                    <% } %>

                    <p>
                        <label class="label-2">
                            Perfil de usuario: 
                            <% if(usersList3.idCategoriaU == 1) { %>
                            <label class="select" for="admin">Administrador</label>
                            <input type="radio" name="categoriau" value='1' checked>
                            <label class="select" for="comprador">Comprador</label>
                            <input type="radio" name="categoriau" value='2'>
                            <% } else { %>
                            <label class="select" for="admin">Administrador</label>
                            <input type="radio" name="categoriau" value='1'>
                            <label class="select" for="comprador">Comprador</label>
                            <input type="radio"  name="categoriau" value='2' checked>
                            <% }  %>
                        </label>
                    </p>
                    <br>
                    <p>
                        <label class="label-file" >
                            Nueva imagen de perfil:
                            <input type="file" name="avatar" id="avatar"  accept="image/png, image/.jpeg, image/.jpg, image/.gif">
                        </label>
                        <br>
                    </p>
                    <% if (locals.errors && errors.avatar) { %>
                        <p class="msg-errores"><%= errors.avatar.msg %></p>
                    <% } %>
                    <!-- Image preview -->
                    <div id="imagePreview" style="text-align: center;"></div>

                    <br>
                    <p class="buttons">
                        <button type="submit" class="action-button cargar">Actualizar</button>
                        <a href="/profile/<%= usersList3.idUsuario %>" class="action-button cancel">Cancelar</a>
                     </p>
            </form>
        </div>
    </section>
<!------------------------Footer---------------------------------> 
<%- include('partials/footer') %>
<!-- /footer --> 
<script src="/javascripts/ValidacionEditUser.js"></script>
</body>
</html>